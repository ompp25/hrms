<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.create.empEmp_creation.controller.General_Information" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="{i18n>title}" showHeader="false">
				<Panel  width="auto" class="sapUiResponsiveMargin">
					<headerToolbar>
						<Toolbar>
							<Title text="General Information"  />
						</Toolbar>
					</headerToolbar>
			
	    				<content>
					
	    					<l:VerticalLayout id="containerLayout" width="100%">
									<HBox>
									<VBox>	
									<HBox>
									<Label text="Organization Name" width="200px" required="true" />
									<Input value="" class="textbox" />
									</HBox>
									<HBox>
									<Label text="Number of Employees" width="200px"/>
									<Text text="1"/>
									</HBox>
									</VBox>
									<VBox class="vb2">
									<HBox>									
									<Label text="Tax ID" width="200px" />
									<Input value="" class="textbox" />
									</HBox>
									<HBox>
									<Label text="Registration Number" width="200px"/>
									<Input value="" class="textbox" />
									</HBox>
									</VBox>
									</HBox>
							</l:VerticalLayout>
							
							<Toolbar class="sapUiTinyMargin"></Toolbar>
	    				
	    					<l:VerticalLayout id="containerLayout1" width="100%" >
								<HBox>	
								<VBox>
									<HBox>
									<Label text="Phone" width="200px"/>
									<Input value="" type="Tel" class="textbox"/>
									</HBox>
									<HBox>
									<Label text="Email" width="200px"/>
									<Input value="" type="Email" class="textbox"/>
									</HBox>
								</VBox>
								<VBox class="vb2">
									<HBox>
									<Label text="Fax" width="200px" />
									<Input value="" type="Tel" class="textbox"/>
									</HBox>
								</VBox>
								</HBox>
							</l:VerticalLayout>
							
								<Toolbar class="sapUiTinyMargin"></Toolbar>
							
	    					<l:VerticalLayout id="containerLayout2" width="100%" >
								<HBox>
									<VBox>
									<HBox>
									<Label text="Address Street 1" width="200px"/>
									<Input value="" class="textbox"/>
									</HBox>
									<HBox>
									<Label text="City" width="200px"/>
									<Input value="" class="textbox" />
									</HBox>
									<HBox>
									<Label text="Zip/Postal Code" width="200px"/>
									<Input value="" class="textbox"/>
									</HBox>
									<HBox>
									<Label text="Note" width="200px"/>
									<TextArea id="TypeHere" value="" growing="true" rows="3" cols="40" />
									</HBox>
									<HBox>
										<Label text="Required field" width="200px" textAlign="Left" required="true" class="labl"/>
										<Text></Text>
									</HBox>
									</VBox>
								
									<VBox class="vb22">
									<HBox>
									<Label text="Address Street 2" width="200px" />
									<Input value="" type="Tel" class="textbox"/>
									</HBox>
									<HBox>
									<Label text="State/Province" width="200px"/>
									<Input value="" class="textbox" />
									</HBox>
									<HBox>
									<Label text="Country" width="200px"/>
									<Select width="195px" class="sel">
										<items class="itm">
											<core:Item text="--Select--"/>
											<core:Item text="Germany" />
											<core:Item text="USA" />
											<core:Item text="England" />
										</items>
									</Select>
									</HBox>
								</VBox>
								</HBox>
								<Toolbar class="sapUiTinyMargin"></Toolbar>
								<HBox>
									<Button type="Accept" text="Edit"  width="100px"></Button>
								</HBox>
							</l:VerticalLayout>
						
	    				</content>
					</Panel>
					

			
			</Page>
		</pages>
	</App>
</mvc:View>